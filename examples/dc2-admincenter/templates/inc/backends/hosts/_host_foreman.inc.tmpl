<div class='container'>
    <div class='row'>
        <div class='span12'>
        	<div class='accordion' id='foreman-data'>
        		<div class='accordion-group'>
        			<div class='accordion-heading'>
        				<a class='accordion-toggle' data-toggle='collapse' data-parent='#foreman-data' href='#foreman-properties'>Properties</a>
        			</div>
					<div class='accordion-body collapse in' id='foreman-properties'>
						<div class='accordion-inner'>
							<table class='table table-striped table-bordered table-hover'>
								<thead>
									<tr>
										<th>Name</th>
										<th>Value</th>
									</tr>
								</thead>
								<tbody>
									{%- for key in foreman_host.keys() %}
									<tr>
										<th>{{key}}</th>
										<td>{{foreman_host[key]}}</td>
									</tr>
									{%- endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
        		<div class='accordion-group'>
        			<div class='accordion-heading'>
        				<a class='accordion-toggle' data-toggle='collapse' data-parent='#foreman-data' href='#foreman-facts'>Facts</a>
        			</div>
        			<div class='accordion-body collapse' id='foreman-facts'>
        				<div class='accordion-inner'>
				        	<table class='table table-striped table-bordered table-hover'>
				        		<thead>
				       				<tr>
				       					<th>Fact Name</th>
				       					<th>Fact Value</th>
				       				</tr>
				        		</thead>
				        		<tbody>
				        			{%- for key in foreman_host_facts.keys()|sort %}
				        			<tr>
				        				<th>{{key}}</th>
				        				<td>{{foreman_host_facts[key]}}</td>
				        			</tr>
				        			{%- endfor %}
				        		</tbody>
				        	</table>
				        </div>        			
        			</div>
        		</div>
        	</div>
        </div>
    </div>
</div>