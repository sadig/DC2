<div class='container-fluid'>
    <div class='row-fluid'>
        <div class='span6'>
            <table class='table table-bordered tabled-striped'>
                <thead>
                    <tr>
                        <th>Type of RIB</th>
                        <th>RIB IP</th>
                    </tr>
                </thead>
                <tbody>
                    {%- for rib in ribs %}
                    <tr>
                        <td>{{rib.remote_type}}</td>
                        <td><a href='https://{{rib.remote_ip}}/' class='btn'><i class='icon-cog'></i> {{rib.remote_ip}}</a></td>
                    </tr>
                    {%- endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
