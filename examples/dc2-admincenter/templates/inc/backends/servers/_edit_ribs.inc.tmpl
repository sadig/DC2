<div class='container-fluid edit'  id='server_rib'>
    <div class='row-fluid'>
        <div class='span6'>
            <table class='table table-bordered tabled-striped' id='table_edit_server_rib'>
                <thead>
                    <tr>
                        <th>Type of RIB</th>
                        <th>RIB IP</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {%- for rib in ribs %}
                    <tr>
                        <td><select name='rib[remote_type][]' class='span6'>
                                {%- for rib_def in ribdef %}
                                <option value='{{rib_def.remote_type}}'{%- if rib_def.remote_type == rib.remote_type %}selected{%-endif%}>{{rib_def.name}}</option>
                                {%- endfor %}
                            </select>
                        </td>
                        <td><input type='text' name='rib[remote_ip][]' value='{{rib.remote_ip}}' class='span6'/></td>
                        <td><button class='btn remove'>Remove</button></td>
                    </tr>
                    {%- endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span6'>
            <div class='btn-group pull-right'  id='table_btn_edit_server_rib'>
                <button class='btn' id='add'><i class='icon-plus'></i> Add</button>
            </div>
        </div>
    </div>
</div>

<div id='table_row_edit_server_rib' style='display:none'>
    <table>
        <tbody>
    <tr>
        <td><select name='rib[remote_type][]' class='span6'>
                {%- for rib_def in ribdef %}
                <option value='{{rib_def.remote_type}}'>{{rib_def.name}}</option>
                {%- endfor %}
            </select>
        </td>
        <td>
            <input type='text' name='rib[remote_ip]' value='' class='span6'/>
        </td>
        <td><button class='btn remove'>Remove</button></td>
    </tr>
</tbody>
    </table>
</div>
