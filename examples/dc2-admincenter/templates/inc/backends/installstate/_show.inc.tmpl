<div class='row'>
    <div class='span3'>
        Hostname:
    </div>
    <div class='span6'>
        {{installstate.hostname}}
    </div>
</div>
<div class='row'>
    <div class='span3'>
        Deployment State:
    </div>
    <div class='span6'>
        {%- for installmethod in installmethods %}
        {%- if installstate.status == installmethod.type %}
        {{installmethod.name}}
        {%- endif %}
        {%- endfor %}
    </div>
</div>
<div class='row'>
    <div class='span3'>
        Progress
    </div>
    <div class='span6'>
        {{installstate.progress}}
    </div>
</div>
{%- if backend_settings.IS_FREEIPA_ENABLED==True %}
<div class='row'>
	<div class='span3'>Host in FreeIPA:</div>
	<div class='span6'>
		<div id='freeipa_host_check'>
			<span class='freeipa' data-action='check' data-type='host' data-backend-id='{{backend_id}}' data-host-id='{{host._id}}'></span>
		</div>
	</div>            
</div>    
{%- endif %}